<section class="w3l-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-contact py-5">
    </div>
</section>
<section class="w3l-blog-block py-5" id="classes">
    <div class="container mt-5">
        <h2 style="font-family: Verdana, Geneva, Tahoma, sans-serif;" class="mb-4 text-center font-weight-bold">Đặt sân bóng đá</h2>
        <div class="row">
            <div class="col-md-6 pt-3">
                <!-- Hình ảnh ở bên cạnh form -->
                <img src="~/Content/images/sanbongda1.jpg" alt="Hình ảnh sân bóng" class="img-fluid rounded">

            </div>
            <div class="col-md-6">
                <!-- Form điền thông tin đặt thuê sân bóng -->
                <form>
                    <div class="form-group">
                        <label for="fullName">Họ và tên:</label>
                        <input type="text" class="form-control" id="fullName" required>
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber">Số điện thoại:</label>
                        <input type="tel" class="form-control" id="phoneNumber" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="form-group">
                        <label for="date">Ngày:</label>
                        <input type="date" class="form-control" id="date" required>
                    </div>
                    <div class="form-group">
                        <label for="time">Thời gian:</label>
                        <input type="time" class="form-control" id="time" required>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Đặt lịch</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

</section>

