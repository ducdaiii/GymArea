<section class="w3l-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-contact py-5">
    </div>
</section>
<section class="w3l-blog-block py-5" id="classes">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <!-- Form đăng ký khóa học -->
                <form>
                    <div class="form-group">
                        <label for="fullName">Họ và tên học viên:</label>
                        <input type="text" class="form-control" id="fullName" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">Số điện thoại người đại diện:</label>
                        <input type="tel" class="form-control" id="phone" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email người đại diện:</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="form-group">
                        <label for="dob">Ngày sinh học viên:</label>
                        <input type="date" class="form-control" id="dob" required>
                    </div>
                    <div class="form-group">
                        <label for="gender">Giới tính học viên:</label>
                        <select class="form-control" id="gender" required>
                            <option value="" disabled selected>Chọn giới tính</option>
                            <option value="male">Nam</option>
                            <option value="female">Nữ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="cccd">CCCD (nếu có):</label>
                        <input type="text" class="form-control" id="cccd">
                    </div>
                    <div class="form-group">
                        <label for="address">Địa chỉ:</label>
                        <input type="text" class="form-control" id="address" required>
                    </div>
                    <div class="d-flex justify-content-center pt-2 mb-3">
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <!-- Thông tin Học phí -->
                <div class="border rounded p-3 d-flex align-items-center justify-content-center" style="height: 100%;">
                    <div>
                        <div class="text-center">
                            <h4>Thông tin Học phí</h4>

                        </div>
                        <hr>
                        <p>Khóa 1 buổi/tuần: 1.820.000đ/13 tuần/13 buổi</p>
                        <p>Khóa 2 buổi/tuần: 2.600.000đ/10 tuần/20 buổi</p>
                        <p>Khóa 3 buổi/tuần: 3.600.000đ/10 tuần/30 buổi</p>
                        <p>Khóa 4 buổi/tuần: 4.400.000đ/10 tuần/40 buổi</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


